@model IEnumerable<Product>

<div>
        @if (Model.Count() == 0)
        {
            <p>К сожалению продукты не были найдены.</p>
        }
        else
        {
            @foreach (var product in Model)
            {
                <a href="Products?id=@product.Id">
                    <div class="search-result">
                        <div class="data">
                            <img src="@product.PathToPicture" class="picture" />
                        </div>
                        <div class="data">
                            <h5>@product.Name</h5>
                            <p><b>Описание:</b> @(new string(product.Description.Take(100).ToArray()))</p>
                            <p><b>Цена:</b> @product.Price</p>
                        </div>
                    </div>
                </a>
            }
        }
    </div>