@model GameStore.Models.ProductModel

<link rel="stylesheet" href="~/css/Products.css" />

<h2>Создание продукта</h2>

<form asp-action="Create" asp-controller="Products" asp-antiforgery="true" enctype="multipart/form-data">
    <div class="validation" asp-validation-summary="All"></div>
    <div>
        <label asp-for="Name">Введите название продукта</label>
        <input type="text" asp-for="Name" required pattern="[А-Яа-яA-Za-z\s]{1,100}" class="name" />
        <span asp-validation-for="Name" />
    </div>
    <div>
        <label asp-for="Description">Введите описание продукта</label>
        <textarea rows="1" asp-for="Description" required pattern="{0,10000}" class="description"></textarea>
        <span asp-validation-for="Description" />
    </div>
    <div>
        <label asp-for="Price">Введите стоимость продукта</label>
        <input type="number" asp-for="Price" class="price"/>
        <span asp-validation-for="Price" />
    </div>
    <div>
        <label asp-for="Picture">Выберите файл картинки продукта</label>
        <input id="image-file" type="file" asp-for="Picture" />
        <span asp-validation-for="Picture" />
    </div>
    <div>
        <input type="submit" id="submit" value="Создать" />
    </div>
</form>